<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="79dp"
        android:layout_height="67dp"
        app:srcCompat="@drawable/logo_blanc_valacro"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/mon_profil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:clickable="true"
        android:text="MODIFIER MES INFORMATIONS"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginLeft="27dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/intro_monprofil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:textStyle="italic"
        android:text="@string/description_mon_profil"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/list"
        android:layout_width="400dp"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/mon_profil"
        app:layout_constraintRight_toLeftOf="parent" />

   <Button
       android:id="@+id/ajouterenfant"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Ajouter enfant"
       android:layout_marginTop="20dp"
       app:layout_constraintRight_toLeftOf="parent"
       app:layout_constraintLeft_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/list"/>

</android.support.constraint.ConstraintLayout>